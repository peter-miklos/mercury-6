<div class="container">
  <div class="row">
    <h2>Add flight</h2>
  </div>
  <div class="row">
    <%= form_for(@flight) do |f| %>
    <div class="form-group row">
      <label for="number" class="col-xs-2 col-form-label"><%= f.label :"Flight nr" %></label>
      <div class="col-xs-10">
        <%= f.text_field(:number, class: "form-control", placeholder: "Add flight number here") %>
      </div>
    </div>

    <div class="form-group row">
      <label for="date" class="col-xs-2 col-form-label"><%= f.label :"Date" %></label>
      <div class="col-xs-10">
        <%= f.date_field(:date, class: "form-control", placeholder: "Add flight date here") %>
      </div>
    </div>

    <div class="form-group row">
      <label for="origin" class="col-xs-2 col-form-label"><%= f.label :origin %></label>
      <div class="col-xs-10">
        <%= f.text_field(:origin, class: "form-control", placeholder: "Add origin here") %>
      </div>
    </div>

    <div class="form-group row">
      <label for="destination" class="col-xs-2 col-form-label"><%= f.label :destination %></label>
      <div class="col-xs-10">
        <%= f.text_field(:destination, class: "form-control", placeholder: "Add destination here") %>
      </div>
    </div>

    <div class="form-group row">
      <label for="aircraft" class="col-xs-2 col-form-label"><%= f.label :aircraft %></label>
      <div class="col-xs-10">
        <%= f.text_field(:aircraft, class: "form-control", placeholder: "Add aircraft here") %>
      </div>
    </div>

    <div class="form-group row">
      <label for="capacity" class="col-xs-2 col-form-label"><%= f.label :capacity %></label>
      <div class="col-xs-10">
        <%= f.number_field(:capacity, class: "form-control", placeholder: "Add aircraft capacity here") %>
      </div>
    </div>
    <%= f.submit(class: "btn btn-primary") %>
    <%= link_to "Cancel", flights_path %>
<% end %>
  </div>
</div>
